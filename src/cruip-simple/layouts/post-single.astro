---
import BlogPost from './blog-post.astro'
import PostToc from '../../cruip-simple/components/post-toc.astro'
const {content} = Astro.props;
---
<BlogPost {content}>
<section>
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <div class="pt-32 pb-12 md:pt-40 md:pb-20">
            <div class="max-w-3xl mx-auto lg:max-w-none">
                <article>
                    <!-- Article header -->
                    <header class="max-w-3xl mx-auto mb-20">
                        <!-- Title -->
                        <h1 class="h1 text-center mb-4">{content.title}</h1>
                    </header>

                    <!-- Article content -->
                    <div class="lg:flex lg:justify-between" data-sticky-container>

                        <!-- Sidebar -->
                        <PostToc headers={content.astro.headers} />

                        <!-- Main content -->
                        <div>

                            <!-- Article meta -->
                            <div class="flex items-center mb-6">
                                <div class="flex shrink-0 mr-3">
                                    <a class="relative" href="#0">
                                        <span class="absolute inset-0 -m-px" aria-hidden="true"><span class="absolute inset-0 -m-px bg-white rounded-full"></span></span>
                                        <img class="relative rounded-full" src="/cruip-simple/images/news-author-04.jpg" width="32" height="32" alt="Author 04" />
                                    </a>
                                </div>
                                <div>
                                    <span class="text-gray-600">By </span>
                                    <a class="font-medium hover:underline" href="#0">{content.author}</a>
                                    <span class="text-gray-600"> Â· July 17, 2020</span>
                                </div>
                            </div>
                            <hr class="w-16 h-px pt-px bg-gray-200 border-0 mb-6" />

                            <!-- Article body -->
                            <article class="prose prose-slate lg:prose-xl">
                               <slot />
                            </article>

                        </div>
                    </div>
                    <!-- Article footer -->
                </article>

            </div>

        </div>
    </div>
</section>
</BlogPost>