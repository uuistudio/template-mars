---
import '../../cruip-simple/styles/global.css';
import Header from '../../cruip-simple/components/header.astro';
import Footer from '../../cruip-simple/components/footer.astro';
import HeroHome from '../../cruip-simple/components/hero-home.astro';
import FeaturesHome from '../../cruip-simple/components/features-home.astro';
import FeaturesBlocks from '../../cruip-simple/components/features-blocks.astro';
import FeaturesWorld from '../../cruip-simple/components/features-world.astro';
import News from '../../cruip-simple/components/news.astro';
import Cta from '../../cruip-simple/components/cta.astro';
---
  
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Simple HTML Demo - Home</title>
</head>

<body class="font-inter antialiased bg-white text-gray-900 tracking-tight">

    <!-- Page wrapper -->
    <div class="flex flex-col min-h-screen overflow-hidden">

        <!-- Site header -->
        <Header />

        <!-- Page content -->
        <main class="grow">
            
            <!-- Page sections -->
            <HeroHome />
            <FeaturesHome />
            <FeaturesBlocks />
            <FeaturesWorld />
            <News />
            <Cta />
            
        </main>

        <!-- Site footer -->
        <Footer />

    </div>

</body>

</html>